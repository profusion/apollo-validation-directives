{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["es2017", "es7", "es6"],
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./build"
  },
  "include": [
    "lib",
    "examples",
  ],
  "exclude": [
    "node_modules",
    "build",
    "lib/**/*.test.ts",
  ]
}
