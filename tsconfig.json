{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "Node16",
    "module": "Node16",
    "lib": ["es2017", "es7", "es6"],
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "declarationDir": "./build/types",
    "baseUrl": ".",
    "outDir": "./build/esm"
  },
  "include": [
    "lib",
  ],
  "exclude": [
    "examples",
    "node_modules",
    "build"
  ]
}
